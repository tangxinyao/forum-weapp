/**app.wxss**/

.container {
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
}

/**nav**/

.nav {
  width: 100%;
  height: 9rem;
  padding-top: 0.5rem;
  padding-bottom: 0.5rem;
  background-color: #fff;
  margin-bottom: 0.5rem;
}

.nav-span {
  float: left;
  width: 25%;
  height: 4.5rem;
  text-align: center;
  line-height: 1;
}

.nav-img {
  display: inline-block;
  margin: 0.5rem auto;
  background-color: #0195ff;
  border-radius: 1rem;
  width: 2rem;
  height: 2rem;
}

.nav-text {
  display: block;
  padding: 0;
  line-height: 2;
  font-size: 0.75rem;
  color: #606060;
}
