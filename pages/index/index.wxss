/**index.wxss**/

.header {
  width: 100%;
  height: 2rem;
  padding-top: 0.5rem;
  padding-bottom: 0.5rem;
  background-color: #0195ff;
}

.search {
  display: flex;
  margin-left: 1rem;
  margin-right: 1rem;
  width: calc(100% - 2rem);
  height: 2rem;
  border-radius: 1rem;
  background-color: #fff;
}

.search-logo {
  flex: none;
  display: inline-block;
  padding-left: 1rem;
  padding-right: 1rem;
  width: 2rem;
  height: 2rem;
  vertical-align: middle;
}

.search-ipt {
  flex: auto;
  display: inline-block;
  margin: auto;
  padding: 0;
  height: 1rem;
  color: #606060;
  font-size: 1rem;
  letter-spacing: 2px;
  vertical-align: middle;
}

.search-ipt-placeholder {
  color: #606060;
  font-size: 0.75rem;
  font-style: italic;
  letter-spacing: 2px;
  text-align: center;
}

.search-btn {
  flex: none;
  padding-left: 1rem;
  padding-right: 1rem;
  margin: auto;
  text-align: center;
  vertical-align: middle;
}

/**recommend**/

.recommend {
  width: 100%;
  line-height: 1;
  box-sizing: border-box;
  background-color: #fff;
  margin-bottom: 0.5rem;
}

.recommend-header {
  padding-top: 1rem;
  padding-bottom: 1rem;
  margin-left: 1rem;
  margin-right: 1rem;
  border-bottom: solid 1px #afafaf;
}

.recommend-box {
  box-sizing: border-box;
  width: calc(200% - 1rem);
  height: 10rem;
}

.recommender-polyfill {
  display: inline-block;
  width: 0.5rem;
  height: 10rem;
}

.recommend-img {
  position: relative;
  display: inline-block;
  background-color: #0195ff;
  width: calc(25% - 1.25rem);
  margin: 1rem 0.5rem;
  height: 8rem;
}

.recommend-text {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.25);
  text-align: center;
  font-size: 0.75rem;
  padding-top: 0.5rem;
  padding-bottom: 0.5rem;
}

/**timeline**/

.timeline {
  width: 100%;
  line-height: 1;
  background-color: #fff;
  margin-bottom: 0.5rem;
}

.timeline-header {
  display: flex;
  justify-content: space-around;
  padding: 1rem;
  height: 1rem;
  width: calc(100% - 2rem);
  border-bottom: solid 1px #f2f2f2;
}

.timeline-selector-span {
  flex: auto;
  color: #606060;
  text-align: center;
  width:5rem;
}

.timeline-selector-seperator {
  flex: auto;
  color: #afafaf;
  text-align: center;
}

.timeline-card {
  padding: 1rem;
}
.timeline-card::after {
  display: block;
  content:'';
  clear:both;
}

.timeline-card-aside {
  float: left;
  width: 4rem;
}

.timeline-card-img {
  width: 3rem;
  height: 3rem;
  border-radius: 1.5rem;
  background-color: #0195ff;
}

.timeline-card-content {
  float: left;
  width: 14rem;
  line-height: 2;
  color: #606060;
}

.timline-card-light {
  color: #afafaf;
}

.timeline-card-type {
  display: inline-block;
  line-height: 1;
  padding: 0.25rem 0.5rem;
  margin-bottom: 0.25rem;
  margin-right: 0.5rem;
  margin-top: 0.25rem;
  border-radius: 0.25rem;
  background-color: orange;
  color: #fff;
}
